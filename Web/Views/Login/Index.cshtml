@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <link rel="icon" type="image/png" href="~/images/icon/logo.png" />
    <link href="~/lib//bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/js/login-page.js" asp-append-version="true"></script>
</head>
<body class="bg-light d-flex justify-content-center align-items-center" style="height: 100vh;">

    <div class="card shadow p-4" style="min-width: 300px; max-width: 400px; width: 100%;">
        <img src="@Url.Content("~/images/icon/logo.png")" alt="Logo" style="margin:0 auto; width: 144px; height: 64px" />
        

        <form id="loginForm">
            <div class="mb-3">
                <label for="exampleInputEmail" class="form-label">メール</label>
                <input type="email" class="form-control" id="exampleInputEmail" aria-describedby="emailHelp">
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword" class="form-label">パスワード</label>
                <input type="password" class="form-control" id="exampleInputPassword">
            </div>
            <div id="errorMessage" class="alert alert-danger d-none" role="alert"></div>
            <button type="submit" class="btn btn-primary w-100">ログイン</button>
        </form>
    </div>

</body>
</html>
